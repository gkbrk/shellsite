#!/bin/sh
content=$(cat)

if [ -z $TITLE ]
then
    TITLE=$SITE_TITLE
else
    TITLE="$TITLE - $SITE_TITLE"
fi

cat <<EOF
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="generator" content="shellsite">
        <title>$TITLE</title>
        <style>$(templates/style)</style>
    </head>
    <body>
        $(helpers/nav)
        $content
        <footer>
            This website was generated by
                <a href="https://github.com/gkbrk/shellsite">shellsite</a>.
        </footer>
    </body>
</html>
EOF
